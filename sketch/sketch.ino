// consts
#define LED_PIN 6
#define SERIAL_SPEED 9600
#define SHIFT 9
#define DECREMENT 1

///////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////

int value = 0;

////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////

void updateValue()
{
    if(value > 0)
    {
        value -= DECREMENT;
    }
}

void updateLED()
{
    analogWrite(LED_PIN, value >> SHIFT);
}

///////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////

void serialEvent()
{
    value = Serial.read() << SHIFT;
}

void setup()
{
    pinMode(LED_PIN, OUTPUT);
    Serial.begin(SERIAL_SPEED);
}

void loop()
{
    updateValue();
    updateLED();
}

